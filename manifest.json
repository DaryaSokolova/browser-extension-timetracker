{
    "manifest_version": 2,
    "name": "Полезная статистика",
    "description": "Мое время потрачено на.. Собираю статистику о твоей продуктивности.",
    "version": "1.0",

    "icons": {
        "16": "search.png",
        "32": "search.png",
        "48": "search.png",
        "128": "search.png"
    },

    "background": {
        "page": "background.html"
    },

    "permissions": [
        "tabs",
        "storage"
    ],

    "browser_action": {
        "default_icon": "search.png",
        "default_title": " Полезная статистика ",
        "default_popup": "popup.html"
    }
}